<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root_search_custom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:visibility="gone">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:ems="10"
        android:hint="@string/search_hint"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/gray_light"
        android:imeOptions="actionDone">
    </EditText>

    <TextView
        android:id="@+id/tv_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/find_indicator_default"
        android:textColor="@android:color/white"/>

    <ImageButton
        android:id="@+id/ib_up"
        style="@style/ActionBarButtonStyle"
        android:src="@drawable/ic_move_up_24dp"
        android:tint="@android:color/white"/>

    <ImageButton
        android:id="@+id/ib_down"
        style="@style/ActionBarButtonStyle"
        android:src="@drawable/ic_move_down_24dp"
        android:tint="@android:color/white"/>

    <ImageButton
        android:id="@+id/ib_close"
        style="@style/ActionBarButtonStyle"
        android:src="@drawable/ic_clear_24dp"
        android:tint="@android:color/white"/>

</LinearLayout>